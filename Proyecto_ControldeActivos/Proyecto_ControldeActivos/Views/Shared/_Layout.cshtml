<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient bg-primary shadow-sm hidden-print">
        <div class="container">
            <!-- Logo o nombre -->
            @Html.ActionLink("Control de Activos", "Index", "Activos", new { area = "" }, new { @class = "navbar-brand fs-3 fw-bold" })

            <!-- Botón de navegación en pantallas pequeñas -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegación">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menú de navegación -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Inicio", "Index", "Activos", new { area = "" }, new { @class = "nav-link active fs-5" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { @class = "nav-link fs-5" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link fs-5" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content ">
        @RenderBody()
        <hr class="hidden-print"/>
        <footer class="hidden-print">
            <p>&copy; @DateTime.Now.Year - Control de Activos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
