@model Proyecto_ControldeActivos.Models.Activos

@{
    ViewBag.Title = "Eliminar Activo";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="mb-0">Eliminar Activo</h2>
        </div>

        <div class="card-body">
            <h4 class="text-center text-danger">¿Estás seguro de que quieres eliminar este activo?</h4>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <p><strong>@Html.DisplayNameFor(model => model.Nombre):</strong></p>
                    <p class="text-muted">@Html.DisplayFor(model => model.Nombre)</p>
                </div>
                <div class="col-md-6">
                    <p><strong>@Html.DisplayNameFor(model => model.Descripcion):</strong></p>
                    <p class="text-muted">@Html.DisplayFor(model => model.Descripcion)</p>
                </div>
                <div class="col-md-6">
                    <p><strong>@Html.DisplayNameFor(model => model.FechaAdquisicion):</strong></p>
                    <p class="text-muted"><i class="bi bi-calendar-event"></i> @Html.DisplayFor(model => model.FechaAdquisicion)</p>
                </div>
                <div class="col-md-6">
                    <p><strong>@Html.DisplayNameFor(model => model.Estado):</strong></p>
                    <p class="text-muted">
                        <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-warning")">
                            @Html.DisplayFor(model => model.Estado)
                        </span>
                    </p>
                </div>
            </div>

            <hr />

            <div class="text-center">
                <!-- Botón para abrir el modal -->
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar este activo? Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <!-- Botón Cancelar -->
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <!-- Botón Confirmar Eliminar -->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
}


