@model Proyecto_ControldeActivos.Models.UserModel

@{
    ViewBag.Title = "Registrar Usuario";
}

<!-- Contenedor principal con fondo atractivo -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; padding-top: 50px;">
    <!-- Card para el formulario de registro -->
    <div class="card shadow-lg border-0" style="max-width: 450px; width: 100%; background: #ffffff;">
        <!-- Cabecera de la tarjeta -->
        <div class="card-header text-center py-4" style="border-top-left-radius: 10px; border-top-right-radius: 10px;">
            <h2 class="mb-0">Registrar Usuario</h2>
            <h3 class="text-muted">Crear una nueva cuenta</h3>
        </div>

        <!-- Cuerpo de la tarjeta -->
        <div class="card-body">
            @using (Html.BeginForm("RegistrarUsuario", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <!-- Mensajes de validación -->
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <!-- Campo de usuario -->
                <div class="mb-4 input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control form-control-lg", placeholder = "Ingrese el nombre de usuario" })
                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                </div>

                <!-- Campo de contraseña -->
                <div class="mb-4 input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    @Html.PasswordFor(model => model.Contrasena, new { @class = "form-control form-control-lg", placeholder = "Ingrese la contraseña" })
                    @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                </div>

                <!-- Campo de rol -->
                <div class="mb-4 input-group">
                    <span class="input-group-text"><i class="bi bi-gear-fill"></i></span>
                    @Html.DropDownListFor(model => model.Rol, new SelectList(new[] { "admin", "user" }), "Seleccione un rol", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })
                </div>

                <!-- Botón de registro -->
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        Registrar
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Manteniendo estilos adicionales -->
<style>
    body {
        background: linear-gradient(135deg, #6e7dff, #5560ea);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .form-control {
        border-radius: 5px;
        font-size: 16px;
        padding: 12px 16px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 8px rgba(56, 128, 255, 0.6);
            border-color: #3887ff;
        }

    .input-group-text {
        background-color: #f1f1f1;
        border: 1px solid #ddd;
        border-right: none;
        border-radius: 5px 0 0 5px;
    }

    .btn {
        font-size: 18px;
        font-weight: bold;
        border-radius: 5px;
        padding: 15px;
        background: #28a745;
        border: none;
        transition: all 0.3s ease;
    }

        .btn:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    .card-header {
        background: linear-gradient(135deg, #003366, #3366cc); /* Azul oscuro a azul brillante */
        color: white;
    }

    .container {
        max-width: 100%;
    }

    .card-body {
        padding: 30px;
    }
</style>

